<%- include('./../views/partials/head') %>
<script> const title = document.getElementById('title'); title.textContent = 'Gamerlab - Carrito';</script>
<script> 
    var timer =
    setTimeout(function(){
        location.reload()
    },5000);    
        clearTimeout()
    </script>

<body> 
    <%- include('./../views/partials/header') %>
    <main>
        <h3 class="carrito-titulo">Carrito de compras</h3>

        <div class="contenedor-resumen">
            <div class="row mt-3">
                <div class="col"> 
                        <div id="carrito-vista" class="form-group table-responsive" >
                            <table class="table-carrito" id="lista-compra" >
                                <thead>
                                    <tr>
                                        <th scope="col">Imagen</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Cantidad</th>
                                        <th scope="col">Sub Total</th>
                                        <th scope="col">Eliminar</th>
                                    </tr>

                                </thead>
                                
                                <tbody></tbody>
                                <tr>
                                    <th colspan="4" scope="col" class="text-right">TOTAL :</th>
                                    <th scope="col">
                                        <p id="total" ></p>
                                    </th>
                                    <!-- <th scope="col"></th> -->
                                </tr>
                            </table>
            </div>                            
            <form action="/products/checkout" method="POST">           
                <div id="productosPagar">
                 </div>  
                        <div class="row justify-content-between">
                            <div class="col-md-4 mb-2">
                                <a href="/" class="btn btn-info btn-block">Seguir comprando</a>
                            </div>
                            <% if (locals.isLogged) { %>
                            <div class="col-xs-12 col-md-4">
                                <button class="btn btn-success btn-block" id="procesar-compra">Realizar compra</button>
                            </div>
                            <div class="row justify-content-center" id="loaders">
                            <img id="cargando" src="../img/cargando.gif" width="220">
                        </div>
                            <% } else { %>
                                <div class="col-xs-12 col-md-4">
                            <button class="btn btn-success btn-block" onclick="someFunc()">Realizar compra</button> 
                            </div>
                            <% } %>
                        </div>
            </form>
                </div>
            </div>
        </div>

    <script src="/js/sweetalert2.min.js"></script>
    <script src="/js/mensaje.js"></script>
    <script src="/js/carrito.js"></script>
    <script src="/js/compra.js"></script>
    </main>
    <%- include('./../views/partials/footer') %>
</body>
</html>